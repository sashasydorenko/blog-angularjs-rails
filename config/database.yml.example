development: &defaults
  adapter: postgresql
  encoding: utf8
  reconnect: false
  pool: 5
  username: root
  password: 
  database: blog_development

test:
  <<: *defaults
  database: blog_test

production:
  <<: *defaults
  database:  blog_production

staging:
  <<: *defaults
  database:  blog_development

